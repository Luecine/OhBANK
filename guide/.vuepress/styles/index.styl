@import url('https://fonts.googleapis.com/css?family=Noto+Serif+KR&display=swap');
body
  font-family 'Noto Serif KR', serif, Nanum Gothic, Malgun Gothic, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue';
// noto sans kr

// 직접 만든 footer를 꾸미자
.siteFooter
  background #242729
  padding 30px 0
  font-size 13px
  color #848d95
  text-align center

#dark-theme-toggle {
    zoom: 1.5;
    position: relative;
    top: 1.5px;
}

#ignore-themes-toggle {
    zoom: 1.5;
    position: relative;
    top: 1.5px;
}

.go-to-top {
    zoom: 1.5;
    background-color: #ffffff;
    height: 30px;
    width: 40px;
    border-radius: 50%;
    box-shadow: 2px 2px 2px rgb(84, 84, 84);
    position: fixed;
    bottom: 0px;
}