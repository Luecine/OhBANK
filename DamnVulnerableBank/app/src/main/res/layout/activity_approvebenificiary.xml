<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApproveBeneficiary">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="72dp"
        android:layout_width="100dp"
        android:layout_marginLeft="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/addben" />


    <TextView
        android:id="@+id/accountid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="155dp"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/accountid1"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountid"
        android:layout_marginLeft="120dp"
        android:hint="아이디를 재입력해주세요"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:textSize="15sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountid1"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/circle"
        android:onClick="approveBeneficiary"
        android:text="확인"
        android:textColor="@color/black" />
    <ImageView
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:src="@drawable/bank"
        android:layout_alignParentBottom="true"
        android:translationX="145dp" />

</RelativeLayout>