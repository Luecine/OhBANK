<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"
    tools:context=".AddBeneficiary">
    <Button
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle"
        android:onClick="addBeneficiary"
        android:text="수정"
        android:textColor="@color/black" />
    <Button
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle"
        android:onClick="addBeneficiary"
        android:text="삭제"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="62dp"
        android:text="QnA 게시판"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="90dp"
        android:text="제목"/>
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="90dp"
        android:text="첨부파일"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/files"
        android:layout_width="196dp"
        android:layout_height="34dp"
        android:translationX="150dp"
        android:translationY="145dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="252dp"
        android:layout_height="278dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="200dp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="30sp"
        android:text="You have no active benificiaries to show" />
    <ImageView
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:src="@drawable/bank"
        android:translationX="145dp"
        android:translationY="490dp" />


</RelativeLayout>