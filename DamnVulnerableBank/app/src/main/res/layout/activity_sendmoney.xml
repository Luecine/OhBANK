<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMoney">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="89dp"
        android:layout_height="61dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/sends" />

    <TextView
        android:id="@+id/actid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="155dp"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/edact"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actid"
        android:layout_marginLeft="100dp"
        android:hint="Enter Account Number Again"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edamt"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edact"
        android:layout_marginLeft="140dp"
        android:hint="Enter Amount"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:textColor="@color/black"
        android:layout_below="@+id/edamt"
        android:layout_marginTop="32dp"
        android:onClick="Biometrics"
        android:layout_marginLeft="155dp"
        android:text="Send Money"/>

    <ImageView
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:src="@drawable/bank"
        android:layout_alignParentBottom="true"
        android:translationX="145dp" />
</RelativeLayout>